<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="card-show">
        <div class="row no-gutters">
          <div class="col-md-4">
            <img src="..." class="card-img" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= cocktail.name %></h5>
              <% cocktail.doses.each do |dose| %>
              <p class="card-text"><%= dose.description %> <%= dose.ingredient.name %></p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>




