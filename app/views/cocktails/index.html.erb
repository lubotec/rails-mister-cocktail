<div class="container">

  <h2>Our menu</h2>

  <div class="row d-flex justify-content-between">
      <% @cocktails.each do |cocktail| %>
        <div class="col-4 mt-4">
          <% if cocktail.photo.url %>
            <div class="card-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
           url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
              <h5> <%= link_to cocktail.name, cocktail_path(cocktail), class: "card-show-title"%></h5>
              <% cocktail.doses.each do |dose| %>
                <p class="card-text"><%= dose.description %> <%= dose.ingredient.name %></p>
              <% end %>
            </div>
            <% else %>
             <div class="card-show">
              <h5> <%= link_to cocktail.name, cocktail_path(cocktail), class: "card-show-title"%></h5>
              <% cocktail.doses.each do |dose| %>
                <p class="card-text"><%= dose.description %> <%= dose.ingredient.name %></p>
              <% end %>
            </div>

          <% end %>
        </div>
      <% end %>
  </div>

</div>




